@model DataAccessLayer.Models.Department

<h1>Delete Department: @Model.Name</h1>

<div class="form-group">
    <label asp-for="Name"></label>
    <input readonly asp-for="Name" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Code"></label>
    <input readonly asp-for="Code" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Creation"></label>
    <input readonly asp-for="Creation" class="form-control" />
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>